<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Options</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <view>
            <TCEforms>
              <label>LLL:EXT:multicatalog/pi1/locallang.xml:ff_view</label>
              <config>
                <type>select</type>
                <items type="array">
                  <numIndex index="0" type="array">
                    <numIndex index="0">LLL:EXT:multicatalog/pi1/locallang.xml:ff_view.single</numIndex>
                    <numIndex index="1">single</numIndex>
                  </numIndex>
                  <numIndex index="1" type="array">
                    <numIndex index="0">LLL:EXT:multicatalog/pi1/locallang.xml:ff_view.list</numIndex>
                    <numIndex index="1">list</numIndex>
                  </numIndex>
                  <numIndex index="2" type="array">
                    <numIndex index="0">LLL:EXT:multicatalog/pi1/locallang.xml:ff_view.catmenu</numIndex>
                    <numIndex index="1">catmenu</numIndex>
                  </numIndex>
                </items>   
                <maxitems>1</maxitems>
                <size>1</size>
              </config>
            </TCEforms>
          </view>
		  <templateFile>
            <TCEforms>
              <label>LLL:EXT:multicatalog/pi1/locallang.xml:ff_templateFile</label>
              <config>
                <type>input</type>
              </config>
            </TCEforms>
          </templateFile>
          <listPid>
			<TCEforms>
				<label>LLL:EXT:multicatalog/pi1/locallang.xml:ff_listPid</label>
				<config>
				  <type>group</type>
				  <internal_type>db</internal_type>
				  <allowed>pages</allowed>
				  <size>1</size>
				  <maxitems>1</maxitems>
				  <minitems>0</minitems>
				  <show_thumbs>1</show_thumbs>
				</config>
            </TCEforms>
          </listPid>
		  <singlePid>
			<TCEforms>
				<label>LLL:EXT:multicatalog/pi1/locallang.xml:ff_singlePid</label>
				<config>
				  <type>group</type>
				  <internal_type>db</internal_type>
				  <allowed>pages</allowed>
				  <size>1</size>
				  <maxitems>1</maxitems>
				  <minitems>0</minitems>
				  <show_thumbs>1</show_thumbs>
				</config>
            </TCEforms>
          </singlePid>
		  <restrictToCategories>
			<TCEforms>
				<label>LLL:EXT:multicatalog/pi1/locallang.xml:ff_restrictToCategories</label>
				<config>
				  <type>select</type>
				  <foreign_table>tx_multicatalog_category</foreign_table>
				  <foreign_table_where>AND sys_language_uid = 0 ORDER BY tx_multicatalog_category.name</foreign_table_where>
				  <maxitems>99</maxitems>
				  <minitems>0</minitems>
				  <show_thumbs>1</show_thumbs>
				  <size>5</size>
				</config>
            </TCEforms>
          </restrictToCategories>
		  <restrictToProducts>
			<TCEforms>
				<label>LLL:EXT:multicatalog/pi1/locallang.xml:ff_restrictToProducts</label>
				<config>
				  <type>select</type>
				  <foreign_table>tx_multicatalog_product</foreign_table>
				  <foreign_table_where>AND sys_language_uid = 0 ORDER BY tx_multicatalog_product.title</foreign_table_where>
				  <maxitems>99</maxitems>
				  <minitems>0</minitems>
				  <show_thumbs>1</show_thumbs>
				  <size>6</size>
				</config>
            </TCEforms>
		  </restrictToProducts>
        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>